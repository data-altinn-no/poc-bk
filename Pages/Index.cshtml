@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="form">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-8">
                        <h3>Velg bransjekoder</h3>
                        <div class="ui-widget">
                            <input id="industry-codes" class="search-field">
                        </div>
                    </div>
                    <div class="col-4">
                        <div id="selected-industry-codes"></div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-8">
                        <h3>Velg kommuner</h3>
                        <div class="ui-widget">
                            <input id="municipalities" class="search-field">
                        </div>
                    </div>
                    <div class="col-4">
                        <div id="selected-municipalities"></div>
                    </div>
                </div>
            </div>           
        </div>
        <div class="row">
            <div class="col">
                <button id="performSearch">Søk etter firma</button>
                @Html.AntiForgeryToken()
            </div>
        </div>
    </div>
</section>


<section id="results"></section>